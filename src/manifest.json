{
  "manifest_version": 3,
  "name": "Filmin Links",
  "short_name": "FLinks",
  "version": "1.0.0",
  "description": "Tu puente entre Filmin y el universo cinematogr√°fico",
  "author": "Antonio Cambados",
  "homepage_url": "https://github.com/antoniocambados/filmin-links",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.filmin.es/*"],
      "js": ["main.js"],
      "css": ["assets/main.css"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["*://*.filmin.es/*"],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://*.filmin.es/*"]
    }
  ],
  "action": {
    "default_popup": "options/options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "permissions": ["storage", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "service_worker": "background.js",
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "filmin-links@antoniocambados.github.com"
    }
  }
}
