{
  "manifest_version": 3,
  "name": "Filmin Links",
  "version": "1.0",
  "description": "Añade enlaces de FilmAffinity a Filmin. Encontrarás enlaces en títulos de películas, series, directores y reparto.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.filmin.es/*"],
      "js": ["main.js"],
      "css": ["assets/main.css"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["*://*.filmin.es/*"],
  "web_accessible_resources": [
    {
      "resources": ["icons/full.svg"],
      "matches": ["*://*.filmin.es/*"]
    }
  ],
  "action": {
    "default_popup": "options/options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "permissions": ["storage", "activeTab"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "filmin-links@antoniocambados.github.com"
    }
  }
}
